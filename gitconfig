#https://elbauldelprogramador.com/21-aliases-utiles-para-git/
[user]
	name = Joel Rodriguez
	email = joelerll@gmail.com
[core]
	editor = vim
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[color]
    status = auto
    interactive = auto
    diff = auto
    branch = auto
    ui = auto

[alias]
    st = status
    ci = commit
    cs = commit -S
    ms = merge -S
    cp = cherry-pick
    cps = cherry-pick -S
    rs = rebase -S
    co = checkout
    pl = pull
    ps = push
    pr = pull --rebase
    br = branch
    lg = log --graph
    lgs = log --graph --show-signature
    ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
    f = "!git ls-files | grep -i"

[gpg]
    program = gpg2

[apply]
    whitespace = nowarn

[format]
    pretty=format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset